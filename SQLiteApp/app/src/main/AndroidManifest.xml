<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fredstrout.sqliteapp" >

    <permission android:name="com.fredstrout.sqliteapp.opportunityprovider.ACCESS_DATA"
        android:protectionLevel="dangerous" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <provider
            android:authorities="com.fredstrout.sqliteapp.opportunityprovider"
            android:name=".OpportunityProvider"
            android:enabled="true"
            android:exported="true"
            android:permission="com.fredstrout.sqliteapp.opportunityprovider.ACCESS_DATA"/>

    </application>

</manifest>
